{
  "manifest_version": 3,
  "name": "IDM Clone Integration",
  "version": "1.0.0",
  "description": "Browser integration for IDM Clone download manager. Captures downloads and detects video streams.",
  "permissions": [
    "downloads",
    "webRequest",
    "tabs",
    "contextMenus",
    "nativeMessaging",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "video_detector.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "IDM Clone"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
