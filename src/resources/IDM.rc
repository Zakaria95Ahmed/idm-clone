// --- Add URL Dialog ---
IDD_ADD_URL DIALOGEX 0, 0, 400, 350
STYLE DS_SETFONT | DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Add New Download"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "URL:", -1, 10, 12, 30, 10
    EDITTEXT        IDC_URL_EDIT, 45, 10, 340, 14, ES_AUTOHSCROLL
    
    CONTROL         "Use &Authorization", IDC_USE_AUTH_CHECK, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 10, 30, 90, 10
    LTEXT           "Username:", -1, 110, 32, 40, 10
    EDITTEXT        IDC_USERNAME_EDIT, 155, 30, 100, 14, ES_AUTOHSCROLL
    LTEXT           "Password:", -1, 265, 32, 40, 10
    EDITTEXT        IDC_PASSWORD_EDIT, 310, 30, 75, 14, ES_AUTOHSCROLL | ES_PASSWORD
    
    LTEXT           "Referer:", -1, 10, 52, 30, 10
    EDITTEXT        IDC_REFERER_EDIT, 45, 50, 340, 14, ES_AUTOHSCROLL
    
    LTEXT           "Save To:", -1, 10, 72, 35, 10
    EDITTEXT        IDC_SAVE_TO_EDIT, 45, 70, 300, 14, ES_AUTOHSCROLL
    PUSHBUTTON      "...", IDC_BROWSE_BTN, 350, 69, 35, 16
    
    LTEXT           "File Name:", -1, 10, 92, 40, 10
    EDITTEXT        IDC_FILENAME_EDIT, 55, 90, 330, 14, ES_AUTOHSCROLL
    
    LTEXT           "Category:", -1, 10, 112, 40, 10
    COMBOBOX        IDC_CATEGORY_COMBO, 55, 110, 120, 100, CBS_DROPDOWNLIST | WS_TABSTOP
    
    LTEXT           "Description:", -1, 10, 132, 45, 10
    EDITTEXT        IDC_DESCRIPTION_EDIT, 55, 130, 330, 14, ES_AUTOHSCROLL
    
    LTEXT           "", IDC_FILESIZE_STATIC, 10, 155, 200, 10
    LTEXT           "", IDC_RESUME_STATIC, 220, 155, 165, 10
    
    DEFPUSHBUTTON   "&Start Download", IDC_START_DOWNLOAD_BTN, 170, 180, 100, 22
    PUSHBUTTON      "Download &Later", IDC_DOWNLOAD_LATER_BTN, 280, 180, 100, 22
    PUSHBUTTON      "Cancel", IDCANCEL, 10, 180, 60, 22
END

