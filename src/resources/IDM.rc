// ═══════════════════════════════════════════════════════════════════════════
//  VERSION INFORMATION
// ═══════════════════════════════════════════════════════════════════════════

VS_VERSION_INFO VERSIONINFO
 FILEVERSION 6,42,1,0
 PRODUCTVERSION 6,42,1,0
 FILEFLAGSMASK VS_FFI_FILEFLAGSMASK
 FILEFLAGS 0x0
 FILEOS VOS__WINDOWS32
 FILETYPE VFT_APP
 FILESUBTYPE VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "CompanyName",      "IDM Clone Project"
            VALUE "FileDescription",  "Internet Download Manager Clone"
            VALUE "FileVersion",      "6.42.1.0"
            VALUE "InternalName",     "IDMClone"
            VALUE "LegalCopyright",   "Open Source - MIT License"
            VALUE "OriginalFilename", "IDMClone.exe"
            VALUE "ProductName",      "IDM Clone - Internet Download Manager"
            VALUE "ProductVersion",   "6.42.1.0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 1200
    END
END

